<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="gourd.hospitaldatabase.AddStaffModalController"
      spacing="15.0" alignment="CENTER_LEFT" prefWidth="400.0">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Add New Staff Member">
        <font>
            <Font name="System Bold" size="16.0"/>
        </font>
    </Label>

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="Enter full name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Role:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="roleField" promptText="e.g., Nurse, Receptionist" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Username:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" promptText="Enter username for login" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="Enter initial password" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button text="Add Staff" onAction="#handleAddStaff" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
</VBox>