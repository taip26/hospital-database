<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gourd.hospitaldatabase.AdminViewController"
            prefHeight="400.0" prefWidth="600.0">

    <Label text="Admin View" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />

    <Button text="Back" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="50.0" onAction="#onBackButtonClick" />

    <TextField fx:id="patientIdField" promptText="Enter Patient ID to delete"
               AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="100.0" prefWidth="200.0" />

    <Button text="Delete Patient" onAction="#onDeletePatientClick"
            AnchorPane.leftAnchor="220.0" AnchorPane.topAnchor="100.0" />

</AnchorPane>
