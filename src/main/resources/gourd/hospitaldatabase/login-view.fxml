<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gourd.hospitaldatabase.LoginController"
      prefHeight="400.0" prefWidth="500.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Hospital Database Login" style="-fx-font-size: 22px; -fx-font-weight: bold;" />


    <HBox alignment="CENTER">
        <Label text="Username:" prefWidth="100" />
        <TextField fx:id="usernameField" prefWidth="200" />
    </HBox>

    <HBox alignment="CENTER">
        <Label text="Password:" prefWidth="100" />
        <PasswordField fx:id="passwordField" prefWidth="200" />
    </HBox>

    <Button text="Login" onAction="#handleLogin" prefWidth="150" />
</VBox>