<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="gourd.hospitaldatabase.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="connectionMessage"/>
    <HBox alignment="CENTER" spacing="20.0">
        <Button text="Close Connection" onAction="#onCloseConnectionButtonClick"/>
        <Button text="Open Connection" onAction="#onConnectButtonClick"/>
    </HBox>
</VBox>
